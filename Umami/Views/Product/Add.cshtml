@model Umami.Models.Domain.Product
@{
}

<form class="w-40" asp-action="Add" method="post">
    <h2 class="pb-10">Create a Product</h2>
    <div class="input-container">
        <label asp-for="Name" class="w-40">Product Name</label>
        <input type="text" class="input" asp-for="Name">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Name"> </span>
    </div>

    <div class="input-container">
        <label asp-for="Alergen" class="w-40">Product Alergen</label>
        <input type="text" class="input" asp-for="Alergen">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Alergen"> </span>
    </div>

    <div class="input-container">
        <label asp-for="MapLocation" class="w-40">Where to buy Product from</label>
        <input type="text" class="input" asp-for="MapLocation">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="MapLocation"> </span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
    </div>
</form>
