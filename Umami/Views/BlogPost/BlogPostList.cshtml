@model Umami.Models.ViewModels.BlogPostVM
@{
}

<div class="tbl-container">
    <h2>Manage my Posts</h2>

    <table>
        <tr>
            <th>Title</th>
            <th>Category</th>
            <th>Description</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model.BlogPostList)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.TypeOfPost</td>
                <td>@item.Description</td>
                <td><img style="height:60px;width:80px" src="/Uploads/@item.PostImage" /></td>
                <td>
                    <a href="/BlogPost/Edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a onclick="return window.confirm('Are you sure?')" href="/BlogPost/Delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }

    </table>
    <div class="input-container">
        <a href="/Home/Index" class="btn btn-sec">Back</a>
    </div>
</div>
