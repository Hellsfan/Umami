}

<form class="w-40" style="display: flex;flex-direction: column;align-items: center;" asp-action="Add" method="post">
    <h2 class="pb-10">Did you enjoy this recipe?</h2>
@*     <div class="input-container">
        <label asp-for="Stars" class="">Rate the recipe from 1 - 5</label>
        <input type="radio" style="content:\f005";" class="input" asp-for="Stars" value="1">
        <input type="radio" class="input" asp-for="Stars" value="2">
        <input type="radio" class="input" asp-for="Stars" value="3">
        <input type="radio" class="input" asp-for="Stars" value="4">
        <input type="radio" class="input" asp-for="Stars" value="5">
    </div>
    <div class="message-box pd-x-28 error">
        <span asp-validation-for="Stars"> </span>
