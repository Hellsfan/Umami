@model IEnumerable<Umami.Models.Domain.Recipe>
@{
}

<div class="tbl-container">
    <h2>My Recipes</h2>

    <table>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Image</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td><img style="height:60px;width:80px" src="/Uploads/@item.RecipeImage" /></td>
                <td>
                    <a href="/Recipe/Edit?id=@item.Id" class="btn btn-default"><i class="fa fa-edit"></i></a>
                    <a onclick="return window.confirm('Are you sure?')" href="/Recipe/Delete?id=@item.Id" class="btn btn-danger"><i class="fa fa-trash"></i></a>
                </td>
            </tr>
        }

    </table>
    <div class="input-container">
        <a href="/Home/Index" class="btn btn-sec">Back</a>
    </div>
</div>
