@model Umami.Models.ViewModels.RecipeEditorVM
@{
}

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<link rel="stylesheet" type="text/css" href="/css/DropdownMulti.css" />
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.0.3/js/bootstrap.min.js"></script>
<link href=" https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.13/css/bootstrap-multiselect.css" rel="stylesheet" type="text/css" />
<script src=" https://cdnjs.cloudflare.com/ajax/libs/bootstrap-multiselect/0.9.13/js/bootstrap-multiselect.js" type="text/javascript"></script>

<form class="" asp-action="Edit" method="post" enctype="multipart/form-data">
    <h2 class="pb-10">Update Recipe</h2>
    <input type="hidden" class="input" asp-for="Id">
    <input type="hidden" class="input" asp-for="RecipeImage">
    <div class="w-40">
        <div class="input-container">
            <label asp-for="Name" class="w-40">Name</label>
            <input type="text" class="input" asp-for="Name">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Name"> </span>
        </div>

        <div class="input-container">
            <label asp-for="Description" class="w-40">Description</label>
            <input type="text" class="input" asp-for="Description">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Description"> </span>
        </div>
    </div>


    <div class="input-container">
        <label asp-for="Instructions" class="" style="padding-right:10%">Instructions</label>
        <textarea asp-for="Instructions"></textarea>
    </div>

    <div class="w-40">
        <div class="input-container">
            <label asp-for="ImageFile" class="w-40">Image</label>
            <input type="file" asp-for="ImageFile">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="ImageFile"> </span>
        </div>

        <div class="input-container">
            <label asp-for="AmountsInput" class="w-40">Product Amounts (separated by comma please)</label>
            <input type="text" class="input" asp-for="AmountsInput">
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="AmountsInput"> </span>
        </div>

        <div class="input-container">
            <label asp-for="Products" class="w-40">Recipe</label>
            <select asp-items="Model.ProductList" class="listbox" asp-for="Products" multiple="multiple">
            </select>
        </div>
        <div class="message-box pd-x-28 error">
            <span asp-validation-for="Products"> </span>
        </div>

        <script type="text/javascript">
            $(function () {
                $('.listbox').multiselect({
                    includeSelectAllOption: true
                });
            });
        </script>

    </div>

    @if (TempData["msg"] != null)
    {
        <div class="alert mb-1">
            @TempData["msg"]
        </div>
    }

    <div class="input-container">
        <button class="btn btn-default" type="submit">Save</button>
    </div>
</form>
